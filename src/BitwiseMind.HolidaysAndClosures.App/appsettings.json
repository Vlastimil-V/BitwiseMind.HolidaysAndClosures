{
  "RedisCacheOptions": {
    "Configuration": "localhost:6379",
    "InstanceName": "RedisCacheInstance"
  },
  "Serilog": {
    "Using": [
      "Serilog.Exceptions",
      "Serilog.Enrichers.Thread",
      "Serilog.Enrichers.AssemblyName",
      "Serilog.Enrichers.Demystifier",
      "Serilog.Enrichers.Environment",
      "Serilog.Sinks.Debug",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async"
    ],
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails",
      "WithDemystifiedStackTraces",
      "WithThreadId",
      "WithEnvironmentUserName"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] ({ThreadId}) [{SourceContext}] {Message}{NewLine}{Exception}"
              }
            },
            {
              "Name": "Debug",
              "Args": {
                "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] ({ThreadId}) [{SourceContext}] {Message}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} [{Level}] ({ThreadId}) [{SourceContext}] {Message}{NewLine}{Exception}",
                "path": "%BASEDIR%\\logs\\log-.txt",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    ]
  }
}
